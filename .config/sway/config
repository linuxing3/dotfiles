# config for sway
#
# Read `man 5 sway` for a complete reference.

# styles - set the folder for your theme definition file
set $theme $HOME/.config/sway/share/themes/matcha-green
# 
# # theme variables
include $theme/definitions
# 
# # global variables
include $HOME/.config/sway/share/definitions
# 
# # user variables
include $HOME/.config/sway/definitions.d/*.conf
# 
include $HOME/.config/sway/share/inputs/*
include $HOME/.config/sway/share/outputs/*
# 
# # enable modes
include $HOME/.config/sway/share/modes/*
# 
# 
# # include additional configs e.g. to autostart applications
include $HOME/.config/sway/share/config.d/*

# user config
include $HOME/.config/sway/config.d/*.conf
